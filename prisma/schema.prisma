generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String
  password   String
  profileUrl String
  notices    Notice[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Notice {
  id         Int    @id @default(autoincrement())
  species    String
  category   String
  price      Int
  title      String
  name       String
  birthday   String
  comment    String
  sex        String
  location   String
  imgURL     String
  popularity Int
  owner      User?  @relation(fields: [ownerId], references: [id])
  ownerId    Int?
}

model News {
  id     Int    @id @default(autoincrement())
  imgUrl String
  title  String
  text   String
  date   String
  url    String
  link   String
}

model Friend {
  id         Int    @id @default(autoincrement())
  title      String
  url        String
  addressUrl String
  imageUrl   String
  address    String
  workHours  String
  phone      String
  email      String
}

model Location {
  id        Int    @id @default(autoincrement())
  useCounty String
  stateEn   String
  cityEn    String
  countyEn  String
}
