generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  name       String
  phone      String
  password   String
  profileUrl String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  token      String
  pets       Pet[]

  @@map("users")
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
model Notice {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  species    String
  category   String
  price      Int
  title      String
  name       String
  birthday   String
  comment    String
  sex        String
  location   String
  imgURL     String
  popularity Int

  @@map("notices")
}

model News {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  imgUrl String
  title  String
  text   String
  date   String
  url    String
  link   String

  @@map("news")
}

model Friend {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  url        String
  addressUrl String
  imageUrl   String
  address    String
  phone      String
  email      String
  workHours  String

  @@map("friends")
}

model Location {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  useCounty String
  stateEn   String
  cityEn    String
  countyEn  String

  @@map("cities")
}

model Pet {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  species  String
  title    String
  name     String
  birthday String
  sex      String
  imgURL   String
  ownerId  String @db.ObjectId
  owner    User?  @relation(fields: [ownerId], references: [id])

  @@map("pets")
}
